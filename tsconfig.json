{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "noEmit": true,

    // Strict Typecheck
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Module
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    // Advanced
    "baseUrl": ".",
    "paths": {
      "linewise": ["types/linewise.d.ts"]
    }
  },
  "exclude": ["dist"]
}
